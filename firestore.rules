rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }
    match /news-articles/{id=**} {
      allow read: if request.auth != null;
    }
    match /users/{userId} {
      allow read, write: if request.auth != null && userId == request.auth.uid;
    }
  }
}